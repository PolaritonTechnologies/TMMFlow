{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/${relativeFileDirname}",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/${relativeFileDirname}",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": true
        },
        {
            "name": "Python Run: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/${relativeFileDirname}",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": true,
            "noDebug": true
        }
    ]
}